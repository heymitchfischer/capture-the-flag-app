<!DOCTYPE html>
<html>
  <head>
    <title>CaptureTheFlagApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <h3>The nav bar is on the left and has the following options:
        <ul>
          <li><a href="/flags">Capture the Flag</a></li>
          <li><a href="/users/<%= current_user.id %>">User</a></li>
          <li><a href="/teams/<%= current_user.team_id %>">Team</li>
          <li><a href="/users">Stats</a></li>
        </ul>
      </h3>
    <% end %>
    <div class="container">
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= message %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>
