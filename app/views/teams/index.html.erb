<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="geocontainer-leaderboard">
        <h1>Team Leaderboard</h1>
        <% @teams.each do |team| %>
          <div>
            <hr>
            <h3 style="color:<%= team.name %>"><%= team.name %> Team: <%= team.score %> Flags</h3>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm">
      <div class="geocontainer-leaderboard">
        <h1>Player Leaderboard</h1>
        <% @players.each do |player| %>
          <div>
            <hr>
            <h3 style="color:<%= player.team.name %>"><%= player.name %>: <%= player.points %></h3>
          </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>