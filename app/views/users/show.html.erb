<div class="container">
  <div class="geocontainer-leaderboard">
    <h1>Player Portfolio</h1>
    <hr>
    <h3><%= @user.name %>, Member of the <%= @user.team.name %> Team</h3>
    <hr>
    <h4>Personal Score: <%= @user.points %></h4>
    <hr>
    <h4>Team Score: <%= @user.team.score %></h4>
    <hr>
    <h4>Personal Successful Captures: <%= @user.captures.where(success: true).length %>/<%= @user.captures.length %></h4>
    <hr>
    <h4>Personal Stuns: <%= @user.stunners.length %></h4>
    <hr>
    <h4>Total Times Stunned: <%= @user.stunnees.length %></h4>
  </div>
</div>
